            System.out.print(myArray[i] + " ");
            i++;
        }
        System.out.println();

        // Output the array in reverse using a for loop
        System.out.print("Array in reverse: ");
        for (int j = myArray.length - 1; j >= 0; j--) {
            System.out.print(myArray[j] + " ");
        }
        System.out.println();

        // Output the first and last values of the array
        System.out.println("First value: " + myArray[0]);
        System.out.println("Last value: " + myArray[myArray.length - 1]);

        // Call the created methods
        System.out.println("Max of 10 and 20: " + myLab.max(10, 20));
        System.out.println("Min of 10 and 20: " + myLab.min(10, 20));
        System.out.println("Sum of array elements: " + sum(myArray));
        System.out.println("Average of array elements: " + average(myArray));
        System.out.println("Maximum value in array: " + max(myArray));
        System.out.println("Minimum value in array: " + min(myArray));
    }
 }


// Add all of the methods here
public class Lab1 {
        
   // Method to return the maximum of two integers using an if-statement
    public  int max(int a, int b) {
        if (a > b) {
            return a;
        } else {
            return b;
        }
    }

    // Method to return the minimum of two integers using an if-statement
    public  int min(int a, int b) {
        if (a < b) {
            return a;
        } else {
            return b;
        }
    }

    // Method to return the sum of all values in an array
    public  int sum(int[] nums) {
        int totalSum = 0;
        for (int num : nums) {
            totalSum += num;
        }
        return totalSum;
    }

    // Method to return the average of values in an array using a foreach loop
    public  double average(int[] nums) {
        if (nums.length == 0) {
            return 0.0; // Handle empty array case to avoid division by zero
        }
        int totalSum = 0;
        for (int num : nums) {
            totalSum += num;
        }
        return (double) totalSum / nums.length;
    }

    // Method to return the maximum value in an array using a for loop
    public  int max(int[] nums) {
        if (nums.length == 0) {
            throw new IllegalArgumentException("Array cannot be empty.");
        }
        int maxValue = nums[0];
        for (int i = 1; i < nums.length; i++) {
            if (nums[i] > maxValue) {
                maxValue = nums[i];
            }
        }
        return maxValue;
    }

    // Method to return the minimum value in an array using a for loop
    public  int min(int[] nums) {
        if (nums.length == 0) {
            throw new IllegalArgumentException("Array cannot be empty.");
        }
        int minValue = nums[0];
        for (int i = 1; i < nums.length; i++) {
            if (nums[i] < minValue) {
                minValue = nums[i];
            }
        }
        return minValue;
    }
}
